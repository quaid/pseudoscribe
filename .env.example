# ===========================================
# PseudoScribe Environment Configuration
# ===========================================
# Copy this file to .env and configure your values

# ===========================================
# Application Configuration
# ===========================================
ENVIRONMENT=development
DEBUG=true
HOST=localhost
PORT=3000

# ===========================================
# AI Provider Keys (get from respective dashboards)
# ===========================================
OPENAI_API_KEY=sk-proj-...
ANTHROPIC_API_KEY=sk-ant-api03-...
GEMINI_API_KEY=AI...
COHERE_API_KEY=...
MISTRAL_API_KEY=...
META_API_KEY=LLM|...
META_BASE_URL=https://api.llama.com/compat/v1

# ===========================================
# GitHub Configuration
# ===========================================
GITHUB_TOKEN=ghp_...

# ===========================================
# AWS Configuration
# ===========================================
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://user:pass@host:5432/db
REDIS_URL=redis://localhost:6379

# ===========================================
# ZeroDB Configuration
# ===========================================
ZERODB_S3_ACCESS_KEY=...
ZERODB_S3_SECRET_KEY=...
ZERODB_S3_ENDPOINT=minio:9000
ZERODB_S3_BUCKET=project-data

# ===========================================
# Authentication
# ===========================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=generate-a-secure-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ===========================================
# External Services (Optional)
# ===========================================
FIGMA_TOKEN=figd_...
RAILWAY_TOKEN=...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_PRIVATE_KEY=pk_live_...
SERPAPI_API_KEY=...
HUME_API_KEY=...

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=debug
LOG_FORMAT=json
